<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Rewards Maximizer</title>

    {{!-- Bootstrap CSS --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    {{!-- Google Fonts --}}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap">
    {{!-- Font Awesome for Icons --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

<body class="bg-light d-flex flex-column min-vh-100">
    {{!-- Header --}}
    <header class="header bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="header-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h1>
        </div>
    </header>
    {{!-- Login --}}
    <div class="login-container">
        <h1 class="logo">Rewards Maximizer <i class="fas fa-credit-card"></i></h1>
        <form {{on "submit" this.handleLogin}} class="login-form">
            <label for="username">Username</label>
            <input type="username" id="username" placeholder="Enter Username" {{on "input" this.setUsername}} required>

            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Enter Password" {{on "input" this.setPassword}} required>

            <button type="submit" class="login-btn">Sign In</button>

            <a href="#" class="forgot-password" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">Forgot
                password?</a>
        </form>
        {{#if this.errorMessage}}
        <p class="Invalid credentials">{{this.errorMessage}}</p>
        {{/if}}
        <p class="signup-link">New to Rewards Maximizer? <button type="button" {{on "click" this.handleRegistration}}
                class="registration"><u>Join now</u></button></p>
    </div>

    {{!-- Forgot Password Card --}}
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form {{on "submit" this.handleForgotPassword}}>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" placeholder="Enter your email"
                                {{on "input" this.setEmail}} required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{!-- Footer --}}
    <footer class="footer bg-dark text-white py-3 mt-auto">
        <div class="footer-content">
            <h2 class="footer-logo">Rewards Maximizer <i class="fas fa-credit-card"></i></h2>
            <div class="social-icons">
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="footer-links">
                <a href="mailto:webmaster@rewardsmaximizer.com">Contact Us</a> | <a href="/about">About Us</a>
            </div>
        </div>
    </footer>

    {{!-- Bootstrap JS --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>