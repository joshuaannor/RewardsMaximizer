<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crowdsourcing - Rewards Maximizer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        crossorigin="anonymous">
    {{!--
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap"> --}}
</head>

<body class="bg-light">

    {{!-- Header --}}
    <header class="header bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="header-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h1>
            <nav class="navbar-links">
                <DropdownMenu />
            </nav>
        </div>
    </header>

    {{!-- Main Content --}}
    <section class="page-section">
        <h2>Contribute to Our Community</h2>
        <div class="card-list">
            <div class="page-card">
                <h3>Share Your Rewards Insights</h3>
                <p>Help others by sharing your experiences with different credit cards.</p>
                {{#if this.errorMessage}}
                    <div class="error">{{this.errorMessage}}</div>
                {{/if}}
                <div class="mt-3">
                    <select class="form-select" id="creditCardSelect" aria-label="Select a Credit Card">
                        <option selected>Select a Credit Card</option>
                        <option value="Chase Sapphire Preferred">Chase Sapphire Preferred</option>
                        <option value="American Express Gold Card">American Express Gold Card</option>
                        <option value="Capital One Venture Rewards">Capital One Venture Rewards</option>
                    </select>
                </div>
                <div class="mt-3">
                    <textarea id="insights" style="resize: none;" placeholder="Share your insights..." rows="15"
                        cols="65" {{on "input" this.setComment}}></textarea>
                </div>
                {{!-- Star rating --}}
                <div class="mt-2 mb-2">
                    <h4>Rate Your Experience</h4>
                    <div class="rating">
                        <input type="radio" id="star1" name="rating" value="1" {{on "input" this.setRating}}/><label for="star1">★</label>
                        <input type="radio" id="star2" name="rating" value="2" {{on "input" this.setRating}}/><label for="star2">★</label>
                        <input type="radio" id="star3" name="rating" value="3" {{on "input" this.setRating}}/><label for="star3">★</label>
                        <input type="radio" id="star4" name="rating" value="4" {{on "input" this.setRating}}/><label for="star4">★</label>
                        <input type="radio" id="star5" name="rating" value="5" {{on "input" this.setRating}}/><label for="star5">★</label>
                    </div>
                </div>
                <div>
                    {{!-- {{on "click" this.submitRecommendation}} --}}
                    <button class="btn btn-primary" type="button" {{on "click" this.submitRecommendation}}>Submit</button>
                </div>
            </div>
        </div>
    </section>

    {{!-- Footer --}}
    <footer class="footer bg-dark text-white py-3 mt-auto">
        <h2 class="footer-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h2>
        <div class="social-icons">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
        <div class="footer-links">
            <a href="mailto:webmaster@rewardsmaximizer.com">Contact Us</a> | <a href="/about">About Us</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

</body>

</html>