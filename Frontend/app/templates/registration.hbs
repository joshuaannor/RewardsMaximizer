<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Rewards Maximizer</title>

    {{!-- Bootstrap CSS --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    {{!-- Google Fonts --}}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap">
    {{!-- Font Awesome for Icons --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body class="bg-light d-flex flex-column min-vh-100">
    {{!-- Header --}}
    <header class="header bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="header-logo">Rewards Maximizer <i class="fas fa-credit-card card-icon"></i></h1>
            <div>
                <button class="btn btn-light" {{on "click" this.back}}>Back</button>
            </div>
        </div>
    </header>

    {{!-- Registration Form --}}
    <div class="registration-container">
        {{!-- <h1 class="logo">Rewards Maximizer <i class="fas fa-credit-card"></i></h1> --}}
        <h2>Register Account</h2>
        {{#if this.errorMessage}}
          <div class="error">{{this.errorMessage}}</div>
        {{/if}}
        <form {{on "submit" this.handleRegistration}} class="registration-form">
            <input type="email" id="email" placeholder="Enter Email" {{on "input" this.setEmail}} required>
            <input type="username" id="username" placeholder="Enter Username" {{on "input" this.setUsername}} required>
            
            <div class="input-group mb-3">
                <input type="password" id="password" placeholder="Enter Password" class="form-control" {{on "input" this.setPassword}} required>
                <button type="button" class="btn btn-outline-secondary eye-icon-button" {{on "click" this.togglePasswordVisibility}}>
                    <i class="fas fa-eye eye-icon"></i>
                </button>
            </div>
            
            <div class="input-group mb-3">
                <input type="password" id="confirm-password" placeholder="Confirm Password" class="form-control" {{on "input" this.setPasswordTwo}} required>
                <button type="button" class="btn btn-outline-secondary eye-icon-button" {{on "click" this.togglePasswordVisibility}}>
                    <i class="fas fa-eye eye-icon"></i>
                </button>
            </div>
            
            <button type="submit" class="login-btn">Register Account</button>
            {{!-- Set error message for duplicate username/email --}}
        </form>
    </div>



    {{!-- Footer --}}
    <footer class="footer bg-dark text-white py-3 mt-auto">
        <div class="footer-content">
            <h2 class="footer-logo">Rewards Maximizer <i class="fas fa-credit-card"></i></h2>
            <div class="social-icons">
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="footer-links">
                <a href="mailto:webmaster@rewardsmaximizer.com">Contact Us</a> | <a href="/about">About Us</a>
            </div>
        </div>
    </footer>
</body>
</html>